<button onclick="myFunction()">Chat</button>

<p id="demo"></p>

<script>
function myFunction() {
  var text;
  var favDrink = prompt("Hello! Talk To Me Below", "Commands");
  switch(favDrink) {
    case "What We Do?":
      text = "(This Could Be Your Info. Do Not Leave It Blank)";
      break;
    case "Commands":
      text = "1. Unresponsive 2. What We Do";
      break;
    case "Unresposive":
      text = "Reload The Page";
      break;
    default:
      text = "Pardon Me?";
  }
  document.getElementById("demo").innerHTML = text;
}
</script>
